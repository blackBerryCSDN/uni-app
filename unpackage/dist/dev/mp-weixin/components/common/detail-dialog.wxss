.detail-dialog-wrap .popup-content {
  width: 540rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100%;
  border-radius: 20rpx;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-align-content: space-between;
          align-content: space-between;
  background-color: #fff;
}
.detail-dialog-wrap .popup-content .popup-header {
  padding: 20rpx;
  height: 60rpx;
  line-height: 100rpx;
  text-align: center;
  font-weight: bold;
}
.detail-dialog-wrap .popup-content .popup-body {
  text-align: center;
  padding: 10rpx 20rpx;
  color: #909090;
  font-size: 28rpx;
}
.detail-dialog-wrap .popup-content .popup-body .img-box {
  height: 200px;
}
.detail-dialog-wrap .popup-content .popup-body .img-box image {
  width: 100%;
  height: 100%;
}
.detail-dialog-wrap .popup-content .popup-footer {
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
