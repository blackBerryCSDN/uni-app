.update-info-content {
  padding: 0 10rpx;
}
.update-info-content .input-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #E4E7ED;
  margin-bottom: 50rpx;
}
.update-info-content .input-item input {
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  width: 100%;
}
.update-info-content .confirm-btn {
  width: 630rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50px;
  margin-top: 70rpx;
  background: #fa436a;
  color: #fff;
  font-size: 32rpx;
}
.update-info-content .confirm-btn:after {
  border-radius: 100px;
}
.update-info-content .confirm-btn:active {
  background-color: #e02850;
}

